<% content_for :bowler do %>
    <%= stylesheet_link_tag 'bowler_search' %>
    <%= javascript_include_tag 'viewmodels/bowler_search_view_model' %>
<% end %>

<h1>Bowler Search</h1>
<hr/>

<div id='bowler-search'>
  <div class='alpha-links'>
    <ul class='link-list'>
        <% alphabet.each do |letter| %>
            <li>
              <a id="<%= letter %>" class='alpha-link' href="#<%= letter.upcase %>" onclick="bowlerSearchViewModel.loadBowlers('<%= letter %>')" data-bind='value: currentChosenLetter'><%= letter.upcase %></a>
            </li>
        <% end %>
    </ul>
  </div>

  <%= form_tag( :bowler_path,
                :id => 'bowler-list-form',
                :method => :get,
                :remote => true) do %>
      <%= hidden_field_tag 'chosenletter' %>
  <% end %>

  <div id='bowler-display' style='padding-bottom: 1px;'>
    <%= render 'bowlers/partials/bowlerList', :locals => { :bowlers => @bowlers } %>
  </div>
</div>
