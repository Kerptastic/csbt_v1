<% content_for :tournament do %>
<%= stylesheet_link_tag 'tables' %>
<%= stylesheet_link_tag 'pending_tournaments' %>
<% end %> 

<h1>Choose a Tournament to Direct</h1>
<hr/>
<div>
    <table>
        <tr class='header-row'>
            <td class='name-header'>Name</td>
            <td class='bowling-center-header'>Bowling Center</td>
            <td class='date-header'>Date</td>
            <td class='entries-header'>Entries</td>
        </tr>
        <% @active_tournaments.each_with_index do |tourney, index| %>
        <tr>
            <td> <a href="/tournaments/<%= tourney.id %>/direct"><%= tourney.name %></a></td>
            <td> <%= tourney.bowling_center.name %> </td>
            <td> <%= tourney.date.strftime('%m/%d/%Y') %> </td>
            <td> <%= tourney.entries.count %> </td>
        </tr>
        <% end %>
    </table>
    
    <div class='float-right' style="margin-bottom: 10px">
    </div>
    <div class='clear-both'>
    </div>
</div>