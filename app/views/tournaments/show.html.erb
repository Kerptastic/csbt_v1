<% content_for :profile do -%>
    <%= stylesheet_link_tag 'tournament' %>
<% end -%>



<h2><%= @tourney.name %> - <%= @tourney.format %> Format <span class="float-right"><%= @tourney.date %></span></h2>
<hr/>

<div class="">
  <div class="tabbable">
    <ul class="nav nav-tabs">
      <% if @tourney.format == "Standard" || @tourney.format == "Round Robin" || @tourney.format == "Masters"%>
      <li class="active">
        <a href="#qualifying-tab" data-toggle="tab">Qualifying</a>
      </li>
      <% end %>
      <li>
        <a href="#semi-finals-tab" data-toggle="tab">Semi-Finals</a>
      </li>
      <li>
        <a href="#finals-tab" data-toggle="tab">Finals</a>
      </li>
    </ul>
    <div class="tab-content">
      <% if @tourney.format == "Standard" || @tourney.format == "Round Robin" || @tourney.format == "Masters"%>
      <div class="tab-pane active" id="qualifying-tab">
        <%= render "tournaments/partials/qualifying", :locals => { :tourney => @tourney } %>
      </div>
      <% end %>
      <div class="tab-pane" id="semi-finals-tab">
        <%#= render "tournaments/partials/semifinals" %>
      </div>
      <div class="tab-pane" id="finals-tab">
        <%#= render "tournaments/partials/finals" %>
      </div>
    </div>
  </div>
</div>
